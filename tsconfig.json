  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "."
  },
  "include": [
    "pages/**/*",
    "subrepo-1/pages/**/*",
    "tests/**/*",
    "subrepo-1/tests/**/*"
  ]
}